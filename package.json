{
  "name": "avocado-saas-starter",
  "version": "0.1.0",
  "description": "Next.js multi-tenant SaaS starter kit with Better Auth, Prisma, PostgreSQL, team invitations, and billing integration.",
  "private": true,
  "keywords": [
    "nextjs",
    "saas",
    "starter",
    "boilerplate",
    "multi-tenant",
    "better-auth",
    "prisma",
    "postgresql",
    "typescript",
    "billing",
    "dashboard"
  ],
  "homepage": "https://github.com/vinimatheus/avocado-saas-starter",
  "bugs": {
    "url": "https://github.com/vinimatheus/avocado-saas-starter/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vinimatheus/avocado-saas-starter.git"
  },
  "packageManager": "pnpm@9.0.6",
  "scripts": {
    "predev": "prisma generate",
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "eslint",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:push": "prisma db push",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f postgres",
    "db:setup": "pnpm run db:up && pnpm run prisma:generate && pnpm run prisma:push"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.16.0",
    "@tanstack/react-table": "^8.21.3",
    "@vercel/analytics": "^1.6.1",
    "better-auth": "^1.4.18",
    "better-call": "1.1.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "kbar": "^0.1.0-beta.48",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "nextjs-toploader": "^3.9.17",
    "prisma": "^6.16.0",
    "qrcode": "^1.5.4",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.1",
    "recharts": "^3.7.0",
    "shadcn": "^3.8.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
